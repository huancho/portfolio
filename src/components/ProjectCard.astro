---
const { project } = Astro.props;
const { name, description, url } = project;
---

<div>
  {
    url ? (
      <a
        href={url}
        target="_blank"
        class="flex items-center space-x-2 w-fit group"
      >
        <h3 class="text-lg text-gray-900">
          <span class="border-b border-gray-300 transition-colors duration-200 group-hover:border-current">
            {name}
          </span>
        </h3>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-gray-400 transition-colors duration-200 group-hover:text-current"
        >
          <path d="M15 3h6v6" />
          <path d="M10 14L21 3" />
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
        </svg>
      </a>
    ) : (
      <h3 class="text-lg text-gray-900">{name}</h3>
    )
  }

  <p class="text-gray-600 mt-1">
    {description}
  </p>
</div>
