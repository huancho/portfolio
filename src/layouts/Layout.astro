---
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Juan Speroni</title>
    <script is:inline>
      (() => {
        const ls = localStorage.getItem('theme');
        const system = matchMedia('(prefers-color-scheme: dark)').matches;
        const dark = ls === 'dark' || (!ls && system);
        document.documentElement.classList.toggle('dark', dark);
      })();
    </script>
    <link rel="stylesheet" href="https://use.typekit.net/sjo0ejo.css" />
    <meta
      name="description"
      content="Juan Speroni â€” web developer building clean, performant landing pages and web apps."
    />
    <link rel="canonical" href="https://juansperoni.com" />
    <link rel="icon" type="image/svg+xml" href="/initials.svg" />
    <meta name="robots" content="index,follow" />
    <meta property="og:title" content="Juan Speroni" />
    <meta
      property="og:description"
      content="Web developer portfolio and projects."
    />
    <meta property="og:image" content="https://juansperoni.com/Juan.webp" />
    <meta property="og:url" content="https://juansperoni.com" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Juan Speroni" />
  </head>
  <body
    class="bg-[#FAF9F6] text-[#242424] dark:bg-[#1C1C1C] dark:text-[#F2F0E8]"
  >
    <slot />
  </body>
</html>
